    function setNotifications(message) {
        debugger;
        var notiHolder = document.getElementById("notiHolder");
        var liNew = document.createElement("li");
        var aNew = document.createElement("a");
        var spanIco = document.createElement("span");
        var icon = document.createElement("i");
        var spanMsg = document.createElement("span");

        icon.className = "fa fa-info-circle fa-2x text-info";
        spanIco.className = "pull-left";

        spanIco.appendChild(icon);
        spanMsg.innerHTML = message;

        aNew.appendChild(spanIco);
        aNew.appendChild(spanMsg);
        aNew.href = "~/Notification/Notification/ViewAll";

        liNew.appendChild(aNew);

        notiHolder.appendChild(liNew);

        var spanNotCount = document.getElementById("spanNotCount");

        var notCountInt = parseInt(spanNotCount.innerHTML);

        if (!isNaN(spanNotCount.innerHTML))
        {
            spanNotCount.innerHTML = (notCountInt + 1).toString();
        }
        else
        {
            spanNotCount.innerHTML = "1";
        }
    }

    function setJoiners(joiners)
    {
        document.getElementById("spanActiveUsersCnt").innerHTML = joiners.length - 1;

        var liHeader = document.createElement("li");
        var pHeader = document.createElement("p");
        pHeader.innerHTML = "Activer Users";

        liHeader.appendChild(pHeader);

        document.getElementById("activeUserHolder").appendChild(liHeader);

        if(joiners)
        {
            for(i=0;i<joiners.length;i++)
