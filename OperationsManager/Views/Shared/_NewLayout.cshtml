                        //var imgItem = document.createElement("img");
                        //imgItem.src = joiners[i].ICOImagePath;
                        //imgItem.className = "img-circle thumb-sm m-r-15";
                        //imgItem.alt = "";
                        //<span class="media-body block">New tasks needs to be done<br><small class="text-muted">3 minutes ago</small></span>

                        var spanItemName = document.createElement("span");
                        spanItemName.className = "media-body block";
                        spanItemName.innerHTML = data[i].UserName + " sent "+data[i].UnreadChat+" unread message(s). <br /><small class=\"text-muted\"> Last at: "+data[i].LastSentAtString+"</small>";

                        //var strongItemName = document.createElement("strong");
                        //strongItemName.innerHTML = data[i].UserName + " sent "+data[i].UnreadChat+" unread message(s). Last at: "+data[i].LastSentAtString;

                        //spanItemName.appendChild(strongItemName);

                        //spanItem.appendChild(imgItem);

                        aItem.appendChild(spanItem);
                        aItem.appendChild(spanItemName);

                        $(aItem).attr('onclick', 'openChatPupup('+data[i].UserMasterId+',"'+data[i].UserName+'");');

                        //aItem.href = "../../Notification/Notification/Chat?user="+joiners[i].UserRowId;


                        liItem.appendChild(aItem);

                        document.getElementById("unreadMsgsHolder").appendChild(aItem);
                    }
