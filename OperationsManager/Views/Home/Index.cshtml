@using OperationsManager.ExtendedHtmlHelpers;
@using OperationsManager.Resources
@model OpMgr.Common.DTOs.SessionDTO
@{

    ViewBag.Title = IndexResource.PageTitle;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Demo Index</h1>
    </div>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Form Elements</div>
            <div class="panel-body">
                <div class="col-md-6">
                    <form role="form">
                        @Html.OpMgrTextBoxFor(m => m.CurrentRequestedPage, IndexResource.CustomControlLabel, new { @class = "form-control", placeholder=IndexResource.CustomControlPlaceHolder })    
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

