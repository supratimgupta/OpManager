@using OpMgr.Resources.User
@using OperationsManager.ExtendedHtmlHelpers
@model OperationsManager.Areas.Login.Models.UserViewModel


@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ResetPassword.PageTitle</title>
</head>
<body>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"><b>@ResetPassword.PageHeader</b></div>
                <div class="panel-body">

                    @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { id = "resetpasswordform" }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="col-lg-6">
                                @Html.OpMgrTextBoxFor(m => m.FName, ResetPassword.FirstName, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <div class="col-lg-6">
                                @Html.OpMgrTextBoxFor(m => m.Password, ResetPassword.CurrentPassword, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-6">
                                @Html.OpMgrTextBoxFor(m => m.NewPassword, ResetPassword.NewPassword, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-6">
                                @Html.OpMgrTextBoxFor(m => m.ConfirmPassword, ResetPassword.ConfirmPassword, new { @class = "form-control" })
                            </div>

                            <div class="col-lg-6">
                                <button type="submit" class="btn btn-primary">@ResetPassword.ResetButton</button>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
