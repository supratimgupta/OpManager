@using OpMgr.Resources.User
@using OperationsManager.ExtendedHtmlHelpers
@model OperationsManager.Areas.Login.Models.MailVM

@{

}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ForgotPassResource.PageTitle</title>

    <link href="~/template/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/template/css/styles.css" rel="stylesheet">
    <link href="~/Content/OpMgrCommonStyles.css" rel="stylesheet" />
    <link href="~/Scripts/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.js"></script>
    <style>
        .panel-default .panel-heading {
            background-color: lightblue;
        }
    </style>

    <!--Icons-->
    <script src="~/template/js/lumino.glyphs.js"></script>

    <script src="~/template/js/jquery-1.11.1.min.js"></script>
    <script src="~/template/js/bootstrap.min.js"></script>
    <script src="~/Content/js/OpMgrStyleJs.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Content/jquery-validation-1.16.0/dist/jquery.validate.js"></script>

    <script type="text/javascript" language="javascript" src="~/Scripts/lib/dialogPage.js"></script>

    <script>

    </script>
</head>
<body>
       <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
               
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            @Html.OpMgrTextBoxFor(m => m.To, ForgotPassResource.Email, new { @class = "form-control", data_rule_required = true, data_message_required = "Please enter a valid email Address" })
                           
                            <button type="submit" class="btn btn-primary">@ForgotPassResource.ResetButton</button>
                            @if (!string.IsNullOrEmpty(Model.SuccessOrFailureMessage))
                            {
                                <br />
                                <br />
                                <div class="lblSuccessOrFail" style="text-align:center">
                                    <label style="text-align:center;font-size:large;color:@Model.MessageColor">@Model.SuccessOrFailureMessage</label>
                                </div>

                            }
                            <br />
                            <br />
                            <div class="login" style="text-align:right">
                                <a style="cursor:pointer" href="/Login/Login/Login">Login</a>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
   

</body>
</html>



