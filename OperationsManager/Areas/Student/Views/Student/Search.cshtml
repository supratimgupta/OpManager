@using OperationsManager.Resources
@using OperationsManager.ExtendedHtmlHelpers
@model IEnumerable<OperationsManager.Areas.Student.Models.StudentVM>

@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<h2>Search Students</h2>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@StudentResource.PageTitle</title>

    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Student Search</div>
                <div class="panel-body">
                    <table border="1" data-toggle="table" data-url="tables/data1.json" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                        <thead>
                            <tr>
                                <th th data-field="name" data-checkbox="true">
                                    @Html.CheckBox("chkStudentHeader")
                                    
                                </th>
                                <th th data-field="name" data-sortable="true">
                                    Name
                                </th>
                                <th h data-field="standard" data-sortable="true">
                                    Standard
                                </th>
                                <th th data-field="section" data-sortable="true">
                                    Section
                                </th>
                                <th th data-field="roll number" data-sortable="true">
                                    Roll Number
                                </th>
                                <th th data-field="registration" data-sortable="true">
                                    Registration
                                </th>
                                
                                
                                <th th data-field="contact" data-sortable="true">
                                    Contact
                                </th>
                                <th>
                                    Actions
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                @if (Model != null)
                                {
                                    foreach (var student in Model)
                                    {
                                        <td>
                                            <input type="checkbox" name="chkStudent" value="@student.StudentInfoId" />
                                        </td>
                                        <td>
                                            @student.Name

                                        </td>
                                        <td>
                                            @student.StandardSectionMap.Standard.StandardName
                                        </td>
                                        <td>
                                            @student.StandardSectionMap.Section.SectionName
                                        </td>
                                        <td>
                                            @student.RollNumber
                                        </td>
                                        <td>
                                            @student.RegistrationNumber
                                        </td>
                                        <td>
                                            @student.GuardianContact

                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit",new { studentId=student.StudentInfoId },null)
                                            @Html.ActionLink("Delete", "Delete", new { studentId = student.StudentInfoId }, null)
                                        </td>
                                    }

                                }
                            </tr>


                        </tbody>
                    </table>
                    <script>
						    $(function () {
						        $('#hover, #striped, #condensed').click(function () {
						            var classes = 'table';

						            if ($('#hover').prop('checked')) {
						                classes += ' table-hover';
						            }
						            if ($('#condensed').prop('checked')) {
						                classes += ' table-condensed';
						            }
						            $('#table-style').bootstrapTable('destroy')
						                .bootstrapTable({
						                    classes: classes,
						                    striped: $('#striped').prop('checked')
						                });
						        });
						    });

						    function rowStyle(row, index) {
						        var classes = ['active', 'success', 'info', 'warning', 'danger'];

						        if (index % 2 === 0 && index / 2 < classes.length) {
						            return {
						                classes: classes[index / 2]
						            };
						        }
						        return {};
						    }
                    </script>
                    </div>
                </div>
            </div>
        </div>
    </body>
    </html>
               
