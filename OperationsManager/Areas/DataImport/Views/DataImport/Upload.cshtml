@using OperationsManager.ExtendedHtmlHelpers
@model OperationsManager.Areas.DataImport.Models.DataImportViewModel
@{
    // Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<h2></h2>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<title>@StudentResource.PageTitle</title>*@

    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading"><b>Upload Excel Files</b></div>
                <div class="panel-body">
                        @using (Html.BeginForm("Upload", "DataTimport", FormMethod.Post, new { id = "dataImportForm", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-lg-5">
                                    <div class="form-group">
                                        <label for="fuStudentFile">Upload Excel For Student Data</label>
                                        <input type="file" name="fuStudentFile" class="form-control" id="fuStudentFile" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-5">
                                    <div class="form-group">
                                        <label for="fuStaffFile">Upload Excel For Staff Data</label>
                                        <input type="file" name="fuStaffFile" class="form-control" id="fuStaffFile" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-5">
                                    @Html.OpMgrSubmitButtonWithIcon("btnFileUpload", "Upload", new {@class="btn btn-pink btn-block" }, "fa fa-upload")
                                </div>
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>
</body>
</html>

